{
  "name": "create-litelement-app",
  "version": "1.0.0",
  "contributors": [
    "The Polymer Authors",
    "Anup Dhakal"
  ],
  "license": "BSD-3-Clause",
  "repository": "exanup/create-litelement-app",
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --colors --open --mode development --host 0.0.0.0",
    "build": "rm -rf dist && webpack --config webpack.config.js",
    "lint": "eslint src && eslint test",
    "lint:fix": "eslint src --fix && eslint test --fix",
    "beautify": "prettier --config .prettierrc.json \"src/**/*.*\" \"test/**/*.*\"",
    "beautify:fix": "prettier --config .prettierrc.json \"src/**/*.*\" \"test/**/*.*\" --write"
  },
  "dependencies": {
    "@babel/polyfill": "7.8.3",
    "@polymer/app-layout": "3.1.0",
    "@polymer/polymer": "3.3.1",
    "@webcomponents/webcomponentsjs": "2.4.1",
    "husky": "4.2.3",
    "lit-element": "2.2.1",
    "pwa-helpers": "0.9.1",
    "redux": "4.0.5",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.4",
    "@babel/preset-env": "7.8.4",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.1.1",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-leapfrog": "2.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-lit": "1.2.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "html-webpack-plugin": "3.2.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "workbox-webpack-plugin": "3.6.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .prettierrc.json --write",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
